  var ColumnLookup = {};
  //Which priority should be set, be carefull before enabling this! 
  //it uses the complete Integer range. 
  var advancedPriority = false;
  var currentUser = "<% $session{'CurrentUser'}->Name %>"; // the current user
  var timeOffSet = 0;

